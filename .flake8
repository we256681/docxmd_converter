[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,D100,D101,D102,D103,D104,D105,D106,D107,D200,D205,D400,D401,B007
exclude =
    .git,
    __pycache__,
    venv,
    build,
    dist,
    .tox,
    *.egg-info
per-file-ignores =
    # Tests can have longer lines and unused imports
    tests/*.py:E501,F401
    # Demo files can have unused imports for demonstration
    demo.py:F401,F841
    final_demo.py:F401
    test_conversion.py:F541
