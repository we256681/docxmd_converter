{
  "templates": {
    "должностная_инструкция": {
      "name": "Должностная инструкция",
      "description": "Шаблон для должностных инструкций сотрудников",
      "sections": [
        "Информация о документе",
        "1. Общие положения",
        "2. Функции",
        "3. Должностные обязанности",
        "4. Права",
        "5. Ответственность",
        "6. Согласование и утверждение"
      ],
      "required_sections": [
        "Общие положения",
        "Должностные обязанности",
        "Права",
        "Ответственность"
      ],
      "numbering_pattern": "hierarchical",
      "detection_keywords": [
        "должностн\\w*\\s+инструкци\\w*",
        "обязанности",
        "права.*сотрудник",
        "ответственность.*сотрудник"
      ],
      "section_templates": {
        "Общие положения": "1.1. {position} относится к категории {category}.\n1.2. {position} назначается и освобождается от должности приказом руководителя организации.\n1.3. {position} подчиняется непосредственно {supervisor}.",
        "Функции": "Основные функции:\n2.1. {function_1}\n2.2. {function_2}",
        "Должностные обязанности": "{position} исполняет следующие обязанности:\n3.1. {duty_1}\n3.2. {duty_2}\n3.3. {duty_3}",
        "Права": "{position} имеет право:\n4.1. {right_1}\n4.2. {right_2}\n4.3. {right_3}",
        "Ответственность": "{position} привлекается к ответственности:\n5.1. За неисполнение или ненадлежащее исполнение должностных обязанностей\n5.2. За нарушение трудовой дисциплины\n5.3. За причинение материального ущерба организации"
      },
      "metadata_fields": {
        "position": "должность",
        "department": "подразделение",
        "approval_date": "дата_утверждения",
        "category": "категория_сотрудника"
      }
    },

    "положение": {
      "name": "Положение",
      "description": "Шаблон для положений о структурных подразделениях",
      "sections": [
        "Информация о документе",
        "1. Общие положения",
        "2. Цели и задачи",
        "3. Структура и управление",
        "4. Функции и полномочия",
        "5. Ответственность",
        "6. Заключительные положения"
      ],
      "required_sections": [
        "Общие положения",
        "Цели и задачи",
        "Функции и полномочия"
      ],
      "numbering_pattern": "hierarchical",
      "detection_keywords": [
        "положени\\w*\\s+о",
        "общие положения",
        "цели.*задачи",
        "структура.*управление"
      ],
      "section_templates": {
        "Общие положения": "1.1. Настоящее Положение определяет {subject}.\n1.2. Положение разработано в соответствии с {legal_basis}.\n1.3. Положение утверждается {approval_authority}.",
        "Цели и задачи": "2.1. Основной целью является {main_goal}.\n2.2. Основные задачи:\n   - {task_1}\n   - {task_2}\n   - {task_3}",
        "Функции и полномочия": "3.1. {subject} выполняет следующие функции:\n   - {function_1}\n   - {function_2}\n   - {function_3}"
      },
      "metadata_fields": {
        "regulation_type": "тип_положения",
        "scope": "область_применения",
        "legal_basis": "правовая_основа"
      }
    },

    "инструкция": {
      "name": "Инструкция",
      "description": "Шаблон для рабочих инструкций и процедур",
      "sections": [
        "Информация о документе",
        "1. Общие положения",
        "2. Область применения",
        "3. Порядок выполнения",
        "4. Требования безопасности",
        "5. Контроль и ответственность"
      ],
      "required_sections": ["Общие положения", "Порядок выполнения"],
      "numbering_pattern": "sequential",
      "detection_keywords": [
        "инструкци\\w*\\s+по",
        "порядок.*действий",
        "алгоритм",
        "последовательность"
      ],
      "section_templates": {
        "Общие положения": "1. Настоящая инструкция устанавливает {purpose}.\n2. Инструкция предназначена для {target_audience}.\n3. Инструкция основана на {basis}.",
        "Порядок выполнения": "1. {step_1}\n2. {step_2}\n3. {step_3}\n4. {step_4}",
        "Требования безопасности": "1. {safety_requirement_1}\n2. {safety_requirement_2}\n3. {safety_requirement_3}"
      },
      "metadata_fields": {
        "instruction_type": "тип_инструкции",
        "target_audience": "целевая_аудитория",
        "safety_level": "уровень_безопасности"
      }
    },

    "отчет": {
      "name": "Отчет",
      "description": "Шаблон для различных видов отчетов",
      "sections": [
        "Информация о документе",
        "1. Введение",
        "2. Анализ ситуации",
        "3. Результаты",
        "4. Выводы",
        "5. Рекомендации"
      ],
      "required_sections": ["Введение", "Результаты", "Выводы"],
      "numbering_pattern": "sequential",
      "detection_keywords": [
        "отчет",
        "анализ.*результат",
        "выводы.*рекомендации",
        "статистика"
      ],
      "section_templates": {
        "Введение": "1. Цель отчета: {report_purpose}\n2. Период отчета: {report_period}\n3. Методология: {methodology}",
        "Результаты": "1. {result_1}\n2. {result_2}\n3. {result_3}",
        "Выводы": "1. {conclusion_1}\n2. {conclusion_2}\n3. {conclusion_3}",
        "Рекомендации": "1. {recommendation_1}\n2. {recommendation_2}\n3. {recommendation_3}"
      },
      "metadata_fields": {
        "report_period": "отчетный_период",
        "report_type": "тип_отчета",
        "author": "автор_отчета"
      }
    },

    "договор": {
      "name": "Договор",
      "description": "Шаблон для договоров и соглашений",
      "sections": [
        "Информация о документе",
        "1. Общие положения",
        "2. Предмет договора",
        "3. Права и обязанности сторон",
        "4. Порядок расчетов",
        "5. Ответственность сторон",
        "6. Заключительные положения"
      ],
      "required_sections": [
        "Предмет договора",
        "Права и обязанности сторон",
        "Ответственность сторон"
      ],
      "numbering_pattern": "hierarchical",
      "detection_keywords": [
        "договор",
        "соглашение",
        "стороны.*обязательства",
        "предмет.*договора"
      ],
      "section_templates": {
        "Предмет договора": "1.1. Предметом настоящего договора является {contract_subject}.\n1.2. {party_1} обязуется {obligation_1}.\n1.3. {party_2} обязуется {obligation_2}.",
        "Права и обязанности сторон": "2.1. {party_1} имеет право:\n   - {right_1}\n   - {right_2}\n2.2. {party_2} имеет право:\n   - {right_3}\n   - {right_4}"
      },
      "metadata_fields": {
        "contract_type": "тип_договора",
        "parties": "стороны_договора",
        "validity_period": "срок_действия"
      }
    },

    "протокол": {
      "name": "Протокол",
      "description": "Шаблон для протоколов заседаний и совещаний",
      "sections": [
        "Информация о документе",
        "1. Общие сведения",
        "2. Повестка дня",
        "3. Ход заседания",
        "4. Принятые решения",
        "5. Поручения"
      ],
      "required_sections": ["Повестка дня", "Принятые решения"],
      "numbering_pattern": "sequential",
      "detection_keywords": [
        "протокол",
        "повестка.*дня",
        "присутствовали",
        "решили"
      ],
      "section_templates": {
        "Общие сведения": "Дата: {meeting_date}\nВремя: {meeting_time}\nМесто: {meeting_place}\nПредседатель: {chairman}\nСекретарь: {secretary}",
        "Повестка дня": "1. {agenda_item_1}\n2. {agenda_item_2}\n3. {agenda_item_3}",
        "Принятые решения": "1. {decision_1}\n2. {decision_2}\n3. {decision_3}"
      },
      "metadata_fields": {
        "meeting_type": "тип_заседания",
        "meeting_date": "дата_заседания",
        "participants_count": "количество_участников"
      }
    },

    "общий_документ": {
      "name": "Общий документ",
      "description": "Универсальный шаблон для неопределенных типов документов",
      "sections": ["Информация о документе", "1. Основное содержание"],
      "required_sections": ["Основное содержание"],
      "numbering_pattern": "simple",
      "detection_keywords": [],
      "section_templates": {
        "Основное содержание": "{main_content}"
      },
      "metadata_fields": {
        "content_type": "тип_содержимого"
      }
    }
  },

  "cleaning_rules": {
    "global": [
      {
        "name": "remove_pandoc_artifacts",
        "pattern": "::: \\{[^}]*\\}",
        "replacement": "",
        "description": "Удаление артефактов pandoc"
      },
      {
        "name": "remove_word_artifacts",
        "pattern": "_Toc\\d+|_Ref\\d+",
        "replacement": "",
        "description": "Удаление артефактов Word"
      },
      {
        "name": "fix_headers",
        "pattern": "^##([^\\s#])",
        "replacement": "## \\1",
        "flags": "MULTILINE",
        "description": "Исправление заголовков"
      },
      {
        "name": "remove_empty_lines",
        "pattern": "\\n{3,}",
        "replacement": "\\n\\n",
        "description": "Удаление лишних пустых строк"
      }
    ],

    "document_specific": {
      "должностная_инструкция": [
        {
          "name": "fix_position_references",
          "pattern": "(\\w+)\\s+исполняет следующие обязанности:\\s*\\1",
          "replacement": "\\1 исполняет следующие обязанности:",
          "description": "Исправление повторов названия должности"
        }
      ],

      "отчет": [
        {
          "name": "fix_report_structure",
          "pattern": "Отчет\\s+о\\s+(.+?)\\s+за\\s+(.+)",
          "replacement": "# Отчет о \\1 за \\2",
          "description": "Стандартизация заголовков отчетов"
        }
      ]
    }
  },

  "quality_criteria": {
    "excellent": {
      "min_score": 90,
      "requirements": [
        "Все обязательные разделы заполнены",
        "Правильная структура и нумерация",
        "Отсутствие артефактов",
        "Достаточное количество содержимого"
      ]
    },
    "high": {
      "min_score": 80,
      "requirements": [
        "Основные разделы заполнены",
        "Правильная структура",
        "Минимум артефактов"
      ]
    },
    "medium": {
      "min_score": 70,
      "requirements": [
        "Базовая структура присутствует",
        "Основное содержимое извлечено"
      ]
    },
    "low": {
      "min_score": 60,
      "requirements": ["Документ распознан", "Частичное содержимое извлечено"]
    }
  }
}
